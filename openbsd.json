{
  "_comment_m": "OpenBSD Packer Template",
  "builders": [
    {
      "boot_command": [
        "S<enter><wait>",
        "dhclient hvn0<enter><wait5>",
        "ftp -o /install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/install.conf<enter><wait>",
        "{{user `vm_boot_setupsh`}}",
        "{{user `vm_boot_cmd`}}"
      ],
      "boot_wait": "40s",
      "communicator": "ssh",
      "cpus": "{{user `vm_cpus`}}",
      "disk_size": "{{user `vm_disk`}}",
      "enable_dynamic_memory": false,
      "enable_mac_spoofing": true,
      "enable_secure_boot": false,
      "enable_virtualization_extensions": true,
      "generation": 1,
      "guest_additions_mode": "disable",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_dir`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "mac_address": "{{user `vm_nic_mac`}}",
      "memory": "{{user `vm_mem`}}",
      "name": "openbsd-hv",
      "shutdown_command": "{{user `shutdown_cmd`}}",
      "skip_compaction": false,
      "ssh_password": "{{user `ssh_user_pass`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{user `ssh_user_name`}}",
      "switch_name": "PackerSwitch",
      "type": "hyperv-iso",
      "vm_name": "openbsd-hv"
    },
    {
      "boot_command": [
        "S<enter><wait>",
        "dhclient vio0<enter><wait5>",
        "ftp -o /install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/install-qemu.conf<enter><wait>",
        "{{user `vm_boot_setupsh`}}",
        "{{user `vm_boot_cmd`}}"
      ],
      "boot_wait": "30s",
      "communicator": "ssh",
      "cpus": "{{user `vm_cpus`}}",
      "disk_size": "{{user `vm_disk`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_dir`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `vm_mem`}}",
      "name": "openbsd-vw",
      "shutdown_command": "{{user `shutdown_cmd`}}",
      "ssh_password": "{{user `ssh_user_pass`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_timeout": "7200s",
      "ssh_username": "{{user `ssh_user_name`}}",
      "type": "vmware-iso",
      "vm_name": "openbsd-vw",
      "vmx_data": {
        "ethernet0.addressType": "generated",
        "ethernet0.networkName": "VM Network",
        "ethernet0.present": "TRUE",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE"
      }
    },
    {
      "boot_command": [
        "S<enter><wait>",
        "dhclient em0<enter><wait5>",
        "ftp -o /install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/install.conf<enter><wait>",
        "{{user `vm_boot_setupsh`}}",
        "{{user `vm_boot_cmd`}}"
      ],
      "boot_wait": "20s",
      "communicator": "ssh",
      "cpus": "{{user `vm_cpus`}}",
      "disk_size": "{{user `vm_disk`}}",
      "guest_additions_mode": "disable",
      "guest_os_type": "OpenBSD_64",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_dir`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `vm_mem`}}",
      "name": "openbsd-vb",
      "shutdown_command": "{{user `shutdown_cmd`}}",
      "ssh_password": "{{user `ssh_user_pass`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{user `ssh_user_name`}}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--rtcuseutc",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--natdnshostresolver1",
          "on"
        ]
      ],
      "vm_name": "openbsd-vb",
      "vrdp_bind_address": "127.0.0.1",
      "vrdp_port_max": 12000,
      "vrdp_port_min": 11000
    },
    {
      "boot_command": [
        "<wait5>S<enter><wait5>",
        "dhclient vio0<enter><wait10>",
        "ftp -o /install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/install-qemu.conf<enter><wait5>",
        "{{user `vm_boot_setupsh`}}",
        "{{user `vm_boot_cmd`}}"
      ],
      "boot_wait": "40s",
      "communicator": "ssh",
      "cpus": "{{user `vm_cpus`}}",
      "disk_compression": true,
      "disk_interface": "virtio",
      "disk_size": "{{user `vm_disk`}}",
      "format": "qcow2",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_dir`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `vm_mem`}}",
      "name": "openbsd-qu",
      "net_device": "virtio-net",
      "qemu_binary": "qemu-system-x86_64",
      "shutdown_command": "{{user `shutdown_cmd`}}",
      "ssh_password": "{{user `ssh_user_pass`}}",
      "ssh_port": "{{user `ssh_port`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{user `ssh_user_name`}}",
      "type": "qemu",
      "use_default_display": true,
      "vm_name": "openbsd-qu"
    }
  ],
  "min_packer_version": "1.7.0",
  "post-processors": [
    {
      "files": [
        "output-openbsd-vb/openbsd-disk001.vmdk",
        "output-openbsd-vb/vbox-openbsd.ovf"
      ],
      "type": "artifice"
    },
    {
      "type": "manifest",
      "output": "boxes/manifest.json",
      "strip_path": true
    },
    {
      "compression_level": 9,
      "include": [
        "templates/info.json",
        "scripts/test.sh"
      ],
      "keep_input_artifact": true,
      "output": "boxes/OpenBSD.box",
      "type": "vagrant",
      "vagrantfile_template": "templates/vagrantfile.rb"
    },
    {
      "checksum_types": "sha256",
      "output": "boxes/{{.BuildName}}.{{.ChecksumType}}.checksum",
      "type": "checksum"
    }
  ],
  "provisioners": [
    {
      "expect_disconnect": false,
      "inline": [
        "sudo /opt/update.sh"
      ],
      "pause_before": "30s",
      "timeout": "300s",
      "type": "shell"
    },
    {
      "expect_disconnect": true,
      "inline": [
        "sudo reboot"
      ],
      "pause_before": "30s",
      "timeout": "300s",
      "type": "shell"
    },
    {
      "environment_vars": [
        "iso_checksum={{user `iso_checksum`}}",
        "iso_url={{user `iso_url`}}"
      ],
      "execute_command": "ksh '{{.Path}}'",
      "expect_disconnect": false,
      "pause_before": "30s",
      "scripts": [
        "scripts/test.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "headless": "false",
    "http_dir": "packer-http/",
    "iso_checksum": "140d26548aec680e34bb5f82295414228e7f61e4f5e7951af066014fda2d6e43",
    "iso_url": "https://cdn.openbsd.org/pub/OpenBSD/6.9/amd64/install69.iso",
    "shutdown_cmd": "sudo shutdown -h -p now",
    "ssh_port": "22",
    "ssh_timeout": "7200s",
    "ssh_user_name": "puffy",
    "ssh_user_pass": "puffypass",
    "vm_boot_cmd": "/install -a -f /install.conf -m install \u0026\u0026 chroot /mnt < /setup.sh \u0026\u0026 reboot<wait><enter>",
    "vm_boot_setupsh": "ftp -o /setup.sh http://{{.HTTPIP}}:{{.HTTPPort}}/setup.sh<enter><wait>",
    "vm_cpus": "2",
    "vm_disk": "32768",
    "vm_mem": "4096",
    "vm_nic_mac": "9c0a914daaff"
  }
}
