{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "command": "packer validate -syntax-only openbsd.json",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rsync-auto",
            "type": "shell",
            "command": "vagrant rsync-auto",
            "problemMatcher": []
        },
        {
            "label": "dev-clean",
            "type": "shell",
            "osx": {
                "command": "./clean.sh"
            },
            "linux": {
                "command": "./clean.sh"
            },
            "windows": {
                "command": "./clean.ps1"
            },
            "problemMatcher": []
        },
        {
            "label": "dev-build-vb",
            "type": "shell",
            "osx": {
                "command": "./build.sh -vb"
            },
            "linux": {
                "command": "./build.sh -vb"
            },
            "windows": {
                "command": "./build.ps1 -vb"
            },
            "problemMatcher": []
        },
        {
            "label": "dev-build-qu",
            "type": "shell",
            "osx": {
                "command": "./build.sh -qu"
            },
            "linux": {
                "command": "./build.sh -qu"
            },
            "windows": {
                "command": "./build.ps1 -qu"
            },
            "problemMatcher": []
        },
        {
            "label": "inspect",
            "type": "shell",
            "command": "packer inspect openbsd.json",
            "problemMatcher": []
        }
    ]
}