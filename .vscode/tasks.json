{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "validate-packer",
            "type": "shell",
            "command": "packer",
            "args": ["validate", "-syntax-only", "openbsd.pkr.hcl"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "validate-vagrant",
            "type": "shell",
            "command": "vagrant",
            "args": ["validate", "Vagrantfile"],
            "problemMatcher": [],
        },
        {
            "label": "rsync-auto",
            "type": "shell",
            "command": "vagrant",
            "args": ["rsync-auto"],
            "problemMatcher": []
        },
        {
            "label": "dev-clean",
            "type": "shell",
            "osx": {
                "command": "./clean.sh"
            },
            "linux": {
                "command": "./clean.sh"
            },
            "windows": {
                "command": "./clean.ps1"
            },
            "problemMatcher": []
        },
        {
            "label": "dev-build-vb",
            "type": "shell",
            "osx": {
                "command": "./build.sh",
                "args": ["-vb"]
            },
            "linux": {
                "command": "./build.sh",
                "args": ["-vb"]
            },
            "windows": {
                "command": "./build.ps1",
                "args": ["-vb"]
            },
            "problemMatcher": []
        },
        {
            "label": "dev-build-qu",
            "type": "shell",
            "osx": {
                "command": "./build.sh",
                "args": ["-qu"]
            },
            "linux": {
                "command": "./build.sh",
                "args": ["-qu"]
            },
            "windows": {
                "command": "./build.ps1",
                "args": ["-qu"]
            },
            "problemMatcher": []
        },
        {
            "label": "inspect",
            "type": "shell",
            "command": "packer",
            "args": ["inspect", "openbsd.pkr.hcl"],
            "problemMatcher": []
        }
    ]
}